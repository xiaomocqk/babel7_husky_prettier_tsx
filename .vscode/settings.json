{
  // 该文件作用于开发过程中
  //   "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.associations": {
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact"
  },
  // eslint
  "eslint.workingDirectories": ["./src"],
  "eslint.run": "onSave",
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "prettier.tabWidth": 2,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  //prettier
  // "editor.defaultFormatter": "esbenp.prettier-vscode", // 指定使用 prettier 格式化代码,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "eslint.alwaysShowStatus": true,
  // "[javascript]": {
  //   "editor.defaultFormatter": null
  // },
  // "[typescript]": {
  //   "editor.defaultFormatter": null
  // },
  // "[typescriptreact]": {
  //   "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  // }
}
